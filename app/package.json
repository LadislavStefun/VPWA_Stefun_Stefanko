{
  "name": "app",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install-all": "cd app/frontend && npm install && cd ../backend && npm install",
    "dev:web": "npm run -w frontend dev",
    "dev:api": "npm run -w backend dev",
    "dev": "concurrently -k -n API,WEB -c auto \"npm:dev:api\" \"npm:dev:web\"",
    "db:refresh": "npm run -w backend migration:refresh"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
